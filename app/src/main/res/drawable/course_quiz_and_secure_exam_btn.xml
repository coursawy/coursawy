<?xml version="1.0" encoding="utf-8"?>
<selector  xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_selected="true">
        <shape >
            <gradient android:startColor="#7CC2EC" android:endColor="#6599D1" android:angle="360"/>
            <corners android:radius="15dp"/>
        </shape>
    </item>
    <item android:state_selected="false">
        <shape >
            <gradient android:startColor="#BCE1F5" android:endColor="#B3CCE8" android:angle="360"/>
            <corners android:radius="15dp"/>
        </shape>
    </item>
</selector>