<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".StudentOrDoctorActivity"
    android:background="#3E3E3E">
    <LinearLayout
        android:layout_width="270dp"
        android:layout_height="150dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="20dp"
        android:orientation="horizontal"
        android:id="@+id/l1">
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/corsawy"
            android:layout_gravity="center_horizontal"
            android:layout_margin="30dp"
            />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/l1"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="100dp"
        android:orientation="horizontal"
        android:id="@+id/l2">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Continue as"
            android:textSize="31dp"
            android:textColor="#CFCFCF"
            android:gravity="center"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="100dp"
        app:layout_constraintTop_toBottomOf="@id/l2"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="50dp"
        android:background="@drawable/backstudentordoctor"
        android:orientation="horizontal"
        android:weightSum="100">
        <TextView
            android:id="@+id/doctor"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="50"
            android:text="Doctor"
            android:textAlignment="textStart"
            android:textSize="24dp"
            android:textColor="#CFCFCF"
            android:layout_gravity="center"
            android:gravity="center"
            android:drawableLeft="@drawable/teacher_icon"
            tools:ignore="RtlCompat"
            android:onClick="onClick"/>
        <ImageView
            android:layout_width="30dp"
            android:layout_height="wrap_content"
            android:background="@drawable/line"/>
        <TextView
            android:id="@+id/student"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="50"
            android:text="Student"
            android:textSize="24dp"
            android:textColor="#CFCFCF"
            android:layout_gravity="center"
            android:gravity="center"
            android:drawableLeft="@drawable/student_icon"
            tools:ignore="RtlCompat"
            android:onClick="onClick"
             />
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>